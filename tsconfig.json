{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "src/**/*"
  ]
}
